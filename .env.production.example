# Production Environment Variables for RAD Monitor
# Copy this file to .env.production and fill in the values

# Server Configuration
ENVIRONMENT=production
API_URL=https://your-domain.com
SERVER_PORT=8000
SERVER_HOST=0.0.0.0
WORKERS=4

# Elasticsearch Configuration
ELASTICSEARCH_URL=https://usieventho-prod-usw2.kb.us-west-2.aws.found.io:9243/
ELASTIC_COOKIE=your-elastic-cookie-here

# Security Configuration
SECRET_KEY=your-secret-key-here
API_TOKENS=token1,token2,token3
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
DISABLE_AUTH=false
VERIFY_SSL=true

# Redis Configuration (optional - leave empty to use local cache only)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_DOCS=false
ACCESS_TOKEN_EXPIRE_MINUTES=30